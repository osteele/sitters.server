#!/bin/bash -eu

cd `dirname $0`/..

psql -d postgres -c 'CREATE DATABASE sitters' 2> /dev/null || true
psql -d postgres -c 'CREATE USER sitters' 2> /dev/null || true
psql -d sitters -c 'DROP TABLE change_log' 2> /dev/null || true
psql -d sitters -c 'DROP TYPE IF EXISTS trigger_operation' 2> /dev/null
./bin/create-database-tables --force
./bin/update-triggers
./bin/create-demo-sitters
