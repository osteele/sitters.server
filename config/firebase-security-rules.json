{
  "rules": {
    "development": {
      "account": {
        ".read": true
      },
      "family": {
        ".read": true
      },
      "request": {
        "$request": {
          ".write": "true",
          ".validate": "newData.hasChildren(['accountKey'])",
          "accountKey": {
            ".validate": "newData.val() == auth.provider + '/' + auth.id"
          }
        }
      },
      "response": {
        "$provider": {
          "$id": {
            ".read": "auth.provider == $provider && auth.id == $id",
            ".write": "auth.provider == $provider && auth.id == $id"
          }
        }
      },
      "sitter": {
        ".read": true
      }
    },
    "production": {
      "account": {
        ".read": true
      },
      "family": {
        ".read": true
      },
      "request": {
        "$request": {
          ".write": "true",
          ".validate": "newData.hasChildren(['accountKey'])",
          "accountKey": {
            ".validate": "newData.val() == auth.provider + '/' + auth.id"
          }
        }
      },
      "response": {
        "$provider": {
          "$id": {
            ".read": "auth.provider == $provider && auth.id == $id",
            ".write": "auth.provider == $provider && auth.id == $id"
          }
        }
      },
      "sitter": {
        ".read": true
      }
    },
    "$other": {
      ".read": true,
      ".write": true
    }
  }
}
